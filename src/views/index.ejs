<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Paste Bin</title>
  <style>
    body {
      margin: 0;
    }
    textarea {
      width: 100vw;
      height: 100vh;
      border: none;
      resize: none;
      font-family: sans-serif;
      font-size: 18px;
      outline: none;
      padding: 20px;
    }
  </style>
</head>
<body>
  <textarea autofocus name="paste" id="text" placeholder="Paste Bin" spellcheck="false"><%= content %></textarea>
  <script src="https://cdn.socket.io/4.1.2/socket.io.min.js"
    integrity="sha384-toS6mmwu70G0fw54EGlWWeA4z3dyJ+dlXBtSURSKN4vyRFOcxd3Bzjj/AoOwY+Rg"
    crossorigin="anonymous"></script>
  <script>
    const socket = io()
    const text = document.getElementById('text')

    text.addEventListener('input', () => {
      socket.emit('paste', text.value)
    })
  </script>
</body>
</html>
